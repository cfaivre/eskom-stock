#page-wrapper
  .row
    .col-lg-12
      %h2.page-header Items
    / /.col-lg-12
  / /.row
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading
        / /.panel-heading
        .panel-body
          .dataTable_wrapper
            %table#dataTables-example.table.table-striped.table-bordered.table-hover
              %thead
                %tr
                  %th Serial Number
                  %th Location
                  %th Project Name
                  %th Manufacture Date
                  %th Expiry Date
                  %th PO Number
                  %th SAP #
              %tbody

  / / main column 2
/ /hbox layout
%script{src: '/js/application/item_list_helper.js'}
:javascript
  var itemListHelper;
  var data = #{@data};
  $(document).ready(function () {
      var config = {
          itemListUrl: '/item/list/',
      };
    itemListHelper = new ItemListHelper(data,config);
    itemListHelper.setup({})
  });

